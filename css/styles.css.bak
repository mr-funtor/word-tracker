*{
	box-sizing:border-box;
	margin:0;
	padding:0;
}

body{
	/* background:pink; */
}

main{
	height:100vh;
	width:100%;
	display:flex;
	flex-direction:column;
	/* justify-content:center; */
	align-items:center;
}

form{
	background:white;
	margin-top:25vh;
	width: 50%;
	height: 100px;
}

label{
	display:block;
	font-size: 20px;
}

input{
	width:100%;
	height:40px;
	border-radius:128px;
	padding: 0px 30px;
	border:1px solid black;
}

button{
	background:black;
	color:white;
	margin-top: 10px;
	position:relative;
	display:block;
	height:25px;
	width: 100px;
	left:80%;
	border:1px solid black;
	border-radius:5px;
	cursor:pointer;
	transition: background 0.2s ease-in-out;
}

button:hover{
	background:lightgrey;
	color:black;
}

.status-modal{
	visibility:hidden;
}
